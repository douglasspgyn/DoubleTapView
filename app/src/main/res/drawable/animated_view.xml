<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/animated_background">
        <shape android:shape="oval">
            <solid android:color="@color/colorAccent" />
            <size
                android:width="@dimen/animatedViewMeasure"
                android:height="@dimen/animatedViewMeasure" />
        </shape>
    </item>

    <item
        android:id="@+id/animated_drawable"
        android:bottom="16dp"
        android:drawable="@drawable/transparent_view"
        android:left="16dp"
        android:right="16dp"
        android:top="16dp" />
</layer-list>